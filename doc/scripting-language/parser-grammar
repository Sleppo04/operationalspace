/** script is the goal of the compiler **/
script              : includelist statementlist TOKEN_EOF 

includelist         : include includelist
                    | include

include             : TOKEN_INCLUDE TOKEN_STRING_LITERAL TOKEN_SEMICOLON

statement           : variable_definition
                    | persist
                    | expression

compound_statement  : TOKEN_LEFT_BRACE statementlist TOKEN_RIGHT_BRACE
                    | statement

statementlist       : statement statementlist
                    | statement

binop_expression    : expression TOKEN_PLUS expression
                    | expression TOKEN_MINUS expression 
                    | expression TOKEN_ASTERISK expression
                    | expression TOKEN_SLASH expression
                    | expression TOKEN_EQUALS expression

unop_expression     : TOKEN_MINUS expression

expression          : value
                    | binop_expression
                    | unop_expression
                    | TOKEN_LEFT_PARENTHESIS expression TOKEN_RIGHT_PARENTHESIS

variable_definition : TOKEN_VAR TOKEN_IDENTIFIER TOKEN_IDENTIFIER TOKEN_SEMICOLON

value               : TOKEN_IDENTIFIER
                    | TOKEN_INT_LITERAL
                    | TOKEN_FLOAT_LITERAL
                    | TOKEN_STRING_LITERAL
                    | TOKEN_FALSE
                    | TOKEN_TRUE

function            : TOKEN_FUNCTION TOKEN_IDENTIFIER TOKEN_IDENTIFIER TOKEN_LEFT_PARENTHESES (TOKEN_IDENTIFIER TOKEN_IDENTIFIER TOKEN_COMMA)* TOKEN_IDENTIFIER TOKEN_IDENTIFIER TOKEN_RIGHT_PARENTHESES compound_statement
